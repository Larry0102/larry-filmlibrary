<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg" >

    <include
        android:id="@+id/movie_details_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/movie_details_header"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/movie_details_basic_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip" >

                <ImageView
                    android:id="@+id/movie_details_cover_img"
                    android:layout_width="120dip"
                    android:layout_height="180dip"
                    android:layout_margin="10dip"
                    android:src="@drawable/movie_pic02" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@id/movie_details_cover_img"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="导演："
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movie_details_director"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="安迪·沃卓斯基"
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主演："
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movie_details_starring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="安迪·沃卓斯基/安迪·沃卓斯基/安迪·沃卓斯基"
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型："
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movie_details_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="动作/科幻/冒险"
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="制片国家/地区："
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movie_details_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美国"
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="语言："
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movie_details_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="英语"
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="片长："
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movie_details_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="136分钟"
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="放映："
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movie_details_showtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2013-7-20"
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="场地："
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/movie_details_cinema"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="艺术影院大厅"
                            android:textColor="@color/text_blue_BCD5FE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/movie_details_collect"
                            android:layout_width="fill_parent"
                            android:layout_height="30dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_seletor"
                            android:drawableLeft="@drawable/icon_collect_logo"
                            android:paddingLeft="8dip"
                            android:text="喜欢"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/movie_details_remind"
                            android:layout_width="fill_parent"
                            android:layout_height="30dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_seletor"
                            android:drawableLeft="@drawable/icon_remind_logo"
                            android:paddingLeft="8dip"
                            android:text="提醒"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

