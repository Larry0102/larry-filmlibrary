<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main" >

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        android:src="@drawable/icon_main_logo" />

    <RelativeLayout
        android:layout_width="280dip"
        android:layout_height="200dip"
        android:layout_below="@id/main_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dip"
        android:background="@drawable/icon_main" >

        <TextView
            android:id="@+id/main_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dip"
            android:drawableTop="@drawable/icon_vip_logo"
            android:gravity="center"
            android:text="会员"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/main_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_vip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:drawableTop="@drawable/icon_movie_logo"
            android:gravity="center"
            android:text="电影"
            android:textColor="@color/text_blue_506E96" />

        <TextView
            android:id="@+id/main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dip"
            android:layout_toLeftOf="@id/main_vip"
            android:drawableTop="@drawable/icon_search_logo"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/text_blue_506E96" />

        <TextView
            android:id="@+id/main_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_vip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dip"
            android:drawableTop="@drawable/icon_more_logo"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/text_blue_506E96" />

        <TextView
            android:id="@+id/main_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dip"
            android:layout_toRightOf="@id/main_vip"
            android:drawableTop="@drawable/icon_news_logo"
            android:gravity="center"
            android:text="新闻"
            android:textColor="@color/text_blue_506E96" />
    </RelativeLayout>

</RelativeLayout>