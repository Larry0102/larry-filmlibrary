<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@drawable/bg_header" >

    <ImageView
        android:id="@+id/header_left"
        android:layout_width="@dimen/header_back_height"
        android:layout_height="@dimen/header_back_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/iocn_palyer_logo" />

    <ImageView
        android:id="@+id/header_right"
        android:layout_width="@dimen/header_right_width"
        android:layout_height="@dimen/header_title_bar_height_big"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/bg_button1"
        android:padding="6dip"
        android:src="@drawable/icon_share" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/header_right"
        android:layout_toRightOf="@id/header_left"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/title_user_center"
        android:textColor="@color/text_blue_506E96"
        android:textSize="20sp" />

</RelativeLayout>