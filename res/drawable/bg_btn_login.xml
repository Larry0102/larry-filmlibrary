<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 实心 -->
    <solid android:color="#16549f" />

    <!-- 描边 -->
    <stroke
        android:width="1dip"
        android:color="#161c34" />

    <!-- 渐变 -->
    <gradient
        android:angle="270"
        android:endColor="#0f3a7e"
        android:startColor="#3274be" />

    <padding
        android:bottom="1dip"
        android:left="1dip"
        android:right="1dip"
        android:top="1dip" />

    <!-- 圆角 -->
    <corners android:radius="10dp" />

</shape>